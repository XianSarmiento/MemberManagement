@model IEnumerable<MemberManagement.Application.DTOs.MembershipTypeDto>

@{
    ViewData["Title"] = "Membership Types";
}

@if (TempData["SuccessMessage"] != null)
{
    <div id="successAlert" class="alert alert-success text-center operation-alert">
        <i class="fa-solid fa-circle-check"></i>
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div id="errorAlert" class="alert alert-danger text-center operation-alert">
        <i class="fa-solid fa-triangle-exclamation"></i>
        @TempData["ErrorMessage"]
    </div>
}

@section Styles {
    <link rel="stylesheet" href="~/css/membershippg/membershipindex.css" />
}

@section Scripts {
    <script src="~/js/membershippg/membershipindex.js"></script>
}

<div class="card shadow-lg">
    <div class="card-body">

        @* TOP BAR *@
        <div class="membership-top-bar mb-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center gap-2">
                    <div class="btn btn-primary btn-sm btn-membership-icon" title="Membership Types">
                        <i class="bi bi-card-checklist"></i>
                    </div>
                    <h2 class="mb-0">MEMBERSHIP TYPES</h2>
                </div>

                @* ADD NEW FORM - Updated with Code and Description *@
                <form asp-action="Create" method="post" class="d-flex align-items-center gap-2">
                    <div class="membership-input-container">
                        <input type="text" name="name" class="form-control form-control-sm" placeholder="Name" required>
                    </div>
                    <div class="membership-input-container" style="width: 100px;">
                        <input type="text" name="membershipCode" class="form-control form-control-sm" placeholder="Code" required>
                    </div>
                    <div class="membership-input-container" style="width: 110px;">
                        <input type="number" step="0.01" name="fee" class="form-control form-control-sm" placeholder="Fee" required>
                    </div>
                    <div class="membership-input-container">
                        <input type="text" name="description" class="form-control form-control-sm" placeholder="Description">
                    </div>
                    <button type="submit" class="btn btn-sm btn-primary" title="Add New Type">
                        <i class="bi bi-plus-lg"></i>
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-sm btn-outline-secondary" title="Refresh List">
                        <i class="bi bi-arrow-clockwise"></i>
                    </a>
                </form>
            </div>
        </div>

        @* TABLE *@
        <div class="table-responsive scrollable-table">
            <table class="table table-bordered table-striped membership-table">
                <thead class="table-primary">
                    <tr>
                        <th style="width: 100px;">Code</th>
                        <th>Membership Name</th>
                        <th>Description</th>
                        <th class="text-end" style="width: 130px;">Membership Fee</th>
                        <th class="text-center" style="width: 100px;">Status</th>
                        <th class="text-center" style="width: 100px;">Manage</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-5">
                                <i class="bi bi-emoji-frown d-block mb-2" style="font-size: 2rem;"></i>
                                No membership types found.
                            </td>
                        </tr>
                    }
                    @foreach (var m in Model)
                    {
                        <tr>
                            <td><code>@m.MembershipCode</code></td>
                            <td><strong>@m.Name</strong></td>
                            <td class="text-truncate" style="max-width: 250px;">@m.Description</td>
                            <td class="text-end">@m.MembershipFee.ToString("N2")</td>
                            <td class="text-center">
                                <span class="badge @(m.IsActive ? "bg-success" : "bg-danger")">
                                    @(m.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-primary btn-edit"
                                            data-bs-toggle="modal" data-bs-target="#editModal"
                                            data-id="@m.Id"
                                            data-name="@m.Name"
                                            data-code="@m.MembershipCode"
                                            data-fee="@m.MembershipFee"
                                            data-desc="@m.Description">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button type="button" class="btn btn-sm @(m.IsActive ? "btn-outline-secondary" : "btn-outline-success")"
                                            data-bs-toggle="modal" data-bs-target="#deleteModal"
                                            data-id="@m.Id"
                                            data-name="@m.Name"
                                            data-status="@m.IsActive.ToString().ToLower()">
                                        <i class="bi @(m.IsActive ? "bi-eye-slash" : "bi-eye")"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-2">
            <div class="branch-info-text">
                Total Membership Types: <strong>@Model.Count()</strong>
            </div>
        </div>
    </div>
</div>

@* EDIT MODAL *@
<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <form asp-action="Update" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="editMembershipId" />
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title"><i class="bi bi-pencil-square me-2"></i>Edit Membership Type</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-8">
                            <label class="form-label fw-bold small">Membership Name</label>
                            <input type="text" name="name" id="editName" class="form-control" required />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold small">Code</label>
                            <input type="text" name="membershipCode" id="editCode" class="form-control" required />
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-bold small">Membership Fee</label>
                            <div class="input-group">
                                <span class="input-group-text">₱</span>
                                <input type="number" step="0.01" name="fee" id="editFee" class="form-control" required />
                            </div>
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-bold small">Description</label>
                            <textarea name="description" id="editDescription" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary px-4">Update Type</button>
                </div>
            </form>
        </div>
    </div>
</div>

@* DELETE MODAL *@
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="deleteForm" method="post" asp-action="Delete">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="deleteMembershipId" />
                <div class="modal-header bg-white">
                    <h5 class="modal-title text-danger"><i class="bi bi-exclamation-triangle me-2"></i>Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete <strong id="membershipNameLabel"></strong>? This action cannot be undone.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger px-4">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>