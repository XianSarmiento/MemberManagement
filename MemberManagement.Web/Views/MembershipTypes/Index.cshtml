@model IEnumerable<MemberManagement.Application.DTOs.MembershipTypeDto>

@{
    ViewData["Title"] = "Membership Types";
}

@if (TempData["SuccessMessage"] != null)
{
    <div id="successAlert" class="alert alert-success text-center operation-alert">
        <i class="fa-solid fa-circle-check"></i>
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div id="errorAlert" class="alert alert-danger text-center operation-alert">
        <i class="fa-solid fa-triangle-exclamation"></i>
        @TempData["ErrorMessage"]
    </div>
}

@section Styles {
    <link rel="stylesheet" href="~/css/membershippg/membershipindex.css" />
}

@section Scripts {
    <script src="~/js/membershippg/membershipindex.js"></script>
}


<div class="card shadow-lg">
    <div class="card-body">

        @* TOP BAR *@
        <div class="membership-top-bar mb-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center gap-2">
                    <div class="btn btn-primary btn-sm btn-membership-icon" title="Membership Types">
                        <i class="bi bi-card-checklist"></i>
                    </div>
                    <h2 class="mb-0">MEMBERSHIP TYPES</h2>
                </div>

                <form asp-action="Create" method="post" class="d-flex align-items-center gap-2">
                    <div class="membership-input-container">
                        <input type="text" name="name" class="form-control form-control-sm" placeholder="Type Name" required>
                    </div>
                    <div class="membership-input-container" style="width: 120px;">
                        <input type="number" step="0.01" name="fee" class="form-control form-control-sm" placeholder="Fee" required>
                    </div>
                    <button type="submit" class="btn btn-sm btn-primary" title="Add New Type">
                        <i class="bi bi-plus-lg"></i>
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-sm btn-outline-secondary" title="Refresh List">
                        <i class="bi bi-arrow-clockwise"></i>
                    </a>
                </form>
            </div>
        </div>

        @* TABLE *@
        <div class="table-responsive scrollable-table">
            <table class="table table-bordered table-striped membership-table">
                <thead class="table-primary">
                    <tr>
                        <th style="width: 80px;">Code</th>
                        <th>Membership Name</th>
                        <th>Description</th>
                        <th class="text-end" style="width: 150px;">Monthly Fee</th>
                        <th class="text-center" style="width: 120px;">Status</th>
                        <th class="text-center" style="width: 100px;">Manage</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-5">
                                <i class="bi bi-emoji-frown d-block mb-2" style="font-size: 2rem;"></i>
                                No membership types found.
                            </td>
                        </tr>
                    }
                    @foreach (var m in Model)
                    {
                        <tr>
                            <td>@m.MembershipCode</td>
                            <td><strong>@m.Name</strong></td>
                            <td>@m.Description</td>
                            <td class="text-end">@m.MembershipFee.ToString("C")</td>
                            <td class="text-center">
                                <span class="badge @(m.IsActive ? "bg-success" : "bg-danger")">
                                    @(m.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-primary btn-edit"
                                            data-bs-toggle="modal" data-bs-target="#editModal"
                                            data-id="@m.Id" data-name="@m.Name" data-code="@m.MembershipCode"
                                            data-fee="@m.MembershipFee" data-desc="@m.Description">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-secondary btn-delete-hover"
                                            data-bs-toggle="modal" data-bs-target="#deleteModal"
                                            data-id="@m.Id" data-name="@m.Name"
                                            title="Delete Type">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-2">
            <div class="membership-info-text">
                Total Types: <strong>@Model.Count()</strong>
            </div>
        </div>
    </div>
</div>

@* DELETE MODAL *@
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="deleteForm" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="deleteMembershipId" />
                <div class="modal-header">
                    <h5 class="modal-title">Delete Membership Type</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete <strong id="membershipNameLabel"></strong>? This action cannot be undone.
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>