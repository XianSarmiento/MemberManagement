@model IEnumerable<MemberManagement.Application.DTOs.MembershipTypeDto>

@{
    ViewData["Title"] = "Membership Types";
}

@if (TempData["SuccessMessage"] != null)
{
    <div id="successAlert" class="alert alert-success text-center operation-alert">
        <i class="fa-solid fa-circle-check"></i>
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div id="errorAlert" class="alert alert-danger text-center operation-alert">
        <i class="fa-solid fa-triangle-exclamation"></i>
        @TempData["ErrorMessage"]
    </div>
}

@section Styles {
    <link rel="stylesheet" href="~/css/membershippg/membershipindex.css" />
}

@section Scripts {
    <script src="~/js/membershippg/membershipindex.js"></script>
}

<div class="card shadow-lg">
    <div class="card-body">

        @* TOP BAR *@
        <div class="membership-top-bar mb-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center gap-2">
                    <div class="btn btn-primary btn-sm btn-membership-icon" title="Membership Types">
                        <i class="bi bi-card-checklist"></i>
                    </div>
                    <h2 class="mb-0">MEMBERSHIP TYPES</h2>
                </div>

                @* ADD NEW FORM *@
                <form asp-action="Create" method="post" class="d-flex align-items-center gap-2">
                    <div class="membership-input-container">
                        <input type="text" name="name" class="form-control form-control-sm" placeholder="Name" required>
                    </div>
                    <div class="membership-input-container" style="width: 100px;">
                        <input type="text" name="membershipCode" class="form-control form-control-sm" placeholder="Code" required>
                    </div>
                    <div class="membership-input-container" style="width: 110px;">
                        <input type="number" step="0.01" name="fee" class="form-control form-control-sm" placeholder="Fee" required>
                    </div>
                    <div class="membership-input-container">
                        <input type="text" name="description" class="form-control form-control-sm" placeholder="Description">
                    </div>
                    <button type="submit" class="btn btn-sm btn-primary" title="Add New Type">
                        <i class="bi bi-plus-lg"></i>
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-sm btn-outline-secondary" title="Refresh List">
                        <i class="bi bi-arrow-clockwise"></i>
                    </a>
                </form>
            </div>
        </div>

        @* TABLE *@
        <div class="table-responsive scrollable-table">
            <table class="table table-bordered table-striped membership-table">
                <thead class="table-primary">
                    <tr>
                        <th style="width: 80px;">Code</th>
                        <th class ="text-left" style="width: 180px;">Membership Name</th>
                        <th>Description</th>
                        <th class="text-left" style="width: 100px;">Fee</th>
                        <th class="text-center" style="width: 100px;">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-5">
                                <i class="bi bi-emoji-frown d-block mb-2" style="font-size: 2rem;"></i>
                                No membership types found.
                            </td>
                        </tr>
                    }
                    @foreach (var m in Model)
                    {
                        <tr>
                            <td><code>@m.MembershipCode</code></td>
                            <td class="membership-name-cell">
                                <div class="d-flex align-items-center justify-content-between clickable-name"
                                     data-bs-toggle="modal" data-bs-target="#editModal"
                                     data-id="@m.Id"
                                     data-name="@m.Name"
                                     data-code="@m.MembershipCode"
                                     data-fee="@m.MembershipFee"
                                     data-desc="@m.Description"
                                     style="cursor: pointer;">

                                    <strong>@m.Name</strong>

                                    <i class="bi bi-pencil-fill edit-reveal-icon text-primary ms-2" style="font-size: 0.85rem; opacity: 0;"></i>
                                </div>
                            </td>
                            <td class="text-truncate" style="max-width: 250px;">@m.Description</td>
                            <td class="text-left">@m.MembershipFee.ToString("N2")</td>
                            <td class="text-center">
                                <button type="button" class="btn-status-toggle"
                                        data-bs-toggle="modal" data-bs-target="#deleteModal"
                                        data-id="@m.Id" data-name="@m.Name" data-status="@m.IsActive.ToString().ToLower()">
                                    <span class="badge rounded-pill @(m.IsActive ? "bg-success" : "bg-danger")">
                                        @(m.IsActive ? "Active" : "Inactive")
                                    </span>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-2">
            <div class="membership-pagination-info">
                Total Membership Types: <strong>@Model.Count()</strong>
            </div>
        </div>
    </div>
</div>

@* EDIT MODAL *@
<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <form asp-action="Update" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="editMembershipId" />
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title fs-6"><i class="bi bi-pencil-square me-2"></i>Edit Membership Type</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-4">
                    <div class="row g-3">
                        <div class="col-md-8">
                            <label class="form-label fw-bold small text-muted">Membership Name</label>
                            <input type="text" name="name" id="editName" class="form-control form-control-sm" required />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold small text-muted">Code</label>
                            <input type="text" name="membershipCode" id="editCode" class="form-control form-control-sm" required />
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-bold small text-muted">Membership Fee</label>
                            <div class="input-group input-group-sm">
                                <span class="input-group-text">₱</span>
                                <input type="number" step="0.01" name="fee" id="editFee" class="form-control" required />
                            </div>
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-bold small text-muted">Description</label>
                            <textarea name="description" id="editDescription" class="form-control form-control-sm" rows="3"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-top-0 px-4 pb-4">
                    <button type="button" class="btn btn-sm btn-outline-secondary px-3" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-sm btn-primary px-3">Update Type</button>
                </div>
            </form>
        </div>
    </div>
</div>

@* DELETE/DEACTIVATE MODAL *@
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content border-0 shadow">
            <form id="deleteForm" method="post" asp-action="Delete">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="deleteMembershipId" />
                <div class="modal-header text-white" id="deleteModalHeader">
                    <h5 class="modal-title fs-6" id="deleteModalTitle">Confirm Action</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center p-4">
                    <div class="mb-3">
                        <i class="bi bi-exclamation-circle text-warning" style="font-size: 3rem;"></i>
                    </div>
                    <p class="mb-0" id="deleteModalBodyText"></p>
                </div>
                <div class="modal-footer border-0 d-flex justify-content-center pb-4">
                    <button type="button" class="btn btn-sm btn-outline-secondary px-3" data-bs-dismiss="modal">No, Cancel</button>
                    <button type="submit" id="deleteModalConfirmBtn" class="btn btn-sm px-3">Yes, Proceed</button>
                </div>
            </form>
        </div>
    </div>
</div>