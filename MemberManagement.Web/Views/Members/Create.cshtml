@model MemberManagement.Web.ViewModels.MemberVM

<h2 style="text-align:center;">CREATE MEMBER</h2>

<div style="display:flex; justify-content:center; margin-top:20px;">

    <div style="border:1px solid #ccc; padding:20px; border-radius:8px; 
            box-shadow:0 2px 6px rgba(0,0,0,0.1); width:320px; background-color:#fff;">

        <form asp-action="Create" method="post">
            <div style="margin-bottom:10px;">
                <label asp-for="FirstName" style="font-size:12px; font-weight:normal;">First Name</label>
                <input asp-for="FirstName" style="width:100%; padding:4px; font-size:12px;" />
                <span asp-validation-for="FirstName" style="color:red; font-size:12px;"></span>
            </div>

            <div style="margin-bottom:10px;">
                <label asp-for="LastName" style="font-size:12px; font-weight:normal;">Last Name</label>
                <input asp-for="LastName" style="width:100%; padding:4px; font-size:12px;" />
                <span asp-validation-for="LastName" style="color:red; font-size:12px;"></span>
            </div>

            <div style="margin-bottom:10px;">
                <label asp-for="BirthDate" style="font-size:12px; font-weight:normal;">Birthdate</label>
                <input asp-for="BirthDate" type="date" style="width:100%; padding:4px; font-size:12px;" />
                <span asp-validation-for="BirthDate" style="color:red; font-size:12px;"></span>
            </div>

            <div style="margin-bottom:10px;">
                <label asp-for="Address" style="font-size:12px; font-weight:normal;">Address</label>
                <input asp-for="Address" style="width:100%; padding:4px; font-size:12px;" />
                <span asp-validation-for="Address" style="color:red; font-size:12px;"></span>
            </div>

            <div style="margin-bottom:10px;">
                <label asp-for="Branch" style="font-size:12px; font-weight:normal;">Branch</label>
                <input asp-for="Branch" style="width:100%; padding:4px; font-size:12px;" />
                <span asp-validation-for="Branch" style="color:red; font-size:12px;"></span>
            </div>

            <div style="margin-bottom:10px;">
                <label asp-for="ContactNo" style="font-size:12px; font-weight:normal;">Mobile Number</label>
                <input asp-for="ContactNo" style="width:100%; padding:4px; font-size:12px;" />
                <span asp-validation-for="ContactNo" style="color:red; font-size:12px;"></span>
            </div>

            <div style="margin-bottom:10px;">
                <label asp-for="EmailAddress" style="font-size:12px; font-weight:normal;">Email Address</label>
                <input asp-for="EmailAddress" style="width:100%; padding:4px; font-size:12px;" />
                <span asp-validation-for="EmailAddress" style="color:red; font-size:12px;"></span>
            </div>

            <div style="text-align:center; margin-top:15px;">
                <button type="submit" style="padding:6px 14px; background-color:#4CAF50; color:white; border:none; border-radius:4px; cursor:pointer; font-size:14px;">
                    Create
                </button>
                <a asp-action="Index" style="padding:6px 14px; background-color:#f0f0f0; color:#333; border:1px solid #ccc; border-radius:4px; text-decoration:none; margin-left:6px; font-size:14px;">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
