@model MemberManagement.Web.ViewModels.MemberVM

<h2 class="card-header-name">CREATE MEMBER</h2>

<div class="member-form-container">
    <div class="member-form-card">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" />
                <span asp-validation-for="FirstName"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" />
                <span asp-validation-for="LastName"></span>
            </div>

            <div class="form-group">
                <label asp-for="BirthDate">Birthdate</label>
                <input asp-for="BirthDate" type="date" />
                <span asp-validation-for="BirthDate"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address">Address</label>
                <input asp-for="Address" />
                <span asp-validation-for="Address"></span>
            </div>

            <div class="form-group">
                <label asp-for="Branch">Branch</label>
                <input asp-for="Branch" />
                <span asp-validation-for="Branch"></span>
            </div>

            <div class="form-group">
                <label asp-for="ContactNo">Mobile Number</label>
                <input asp-for="ContactNo" />
                <span asp-validation-for="ContactNo"></span>
            </div>

            <div class="form-group">
                <label asp-for="EmailAddress">Email Address</label>
                <input asp-for="EmailAddress" />
                <span asp-validation-for="EmailAddress"></span>
            </div>

            <div class="form-buttons">
                <button type="submit" class="btn-create-member">Create</button>
                <a asp-action="Index" class="btn-create-cancel">Cancel</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
