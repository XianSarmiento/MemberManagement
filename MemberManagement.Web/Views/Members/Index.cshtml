@using X.PagedList
@using X.PagedList.Mvc.Core
@using MemberManagement.Web.ViewModels
@model MemberIndexVM

@{
    ViewData["Title"] = "Members List";
}

@if (TempData["SuccessMessage"] != null)
{
    <div id="successAlert" class="alert alert-success text-center">
        <i class="fa-solid fa-circle-info"></i>
        @TempData["SuccessMessage"]
    </div>
}

@section Styles {
    <link rel="stylesheet" href="~/css/memberpg/memberindex.css" />
}
@section Scripts {
    <script src="~/js/memberpg/memberindex.js"></script>
}

<br />
<div class="card shadow-lg">
    <div class="card-body">

        @* MEMBERS LIST | SEARCH BAR | FILTER | REFRESH *@
        <div class="member-top-bar mb-3">
            <div class="d-flex justify-content-between align-items-center">

                <div class="d-flex align-items-center gap-2">
                    <a asp-action="Create" class="btn btn-primary btn-sm btn-create-member" title="Create Member">
                        <i class="bi bi-person-plus"></i>
                    </a>
                    <h2 class="mb-0">MEMBERS LIST</h2>
                </div>

                <form method="get" class="d-flex align-items-center gap-3">
                    <input type="hidden" name="pageSize" value="@Model.PageSize" />

                    <div class="d-flex align-items-center gap-1">
                        <div style="width:160px;">
                            <input type="text" name="searchLastName" id="searchLastName" class="form-control form-control-sm" placeholder="Search by Last Name" value="@Model.SearchLastName" />
                        </div>
                        <button type="submit" class="btn btn-sm btn-primary" title="Search by Last Name">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>

                    <div class="d-flex align-items-center gap-1">
                        <div style="width:160px;">
                            <input list="branchList" name="branch" id="branchFilter" class="form-control form-control-sm" placeholder="Filter by Branch" value="@Model.SelectedBranch" />
                            <datalist id="branchList">
                                @foreach (var b in Model.Branches)
                                {
                                    <option value="@b"></option>
                                }
                            </datalist>
                        </div>
                        <button type="submit" class="btn btn-sm btn-primary" title="Filter by Branch">
                            <i class="bi bi-funnel"></i>
                        </button>
                    </div>

                    <a href="@Url.Action("Index")"
                       class="btn btn-sm btn-outline-secondary" title="Reset filters">
                       <i class="bi bi-arrow-clockwise"></i>
                    </a>
                </form>

            </div>
        </div>

        @* MEMBERS TABLE *@
        <div class="table-responsive scrollable-table">
            <table class="table table-bordered table-striped member-table">
                <thead class="table-primary">
                    <tr>
                        <th>
                            <a href="@Url.Action("Index", new { 
                                searchLastName = Model.SearchLastName, branch = Model.SelectedBranch, 
                                pageSize = Model.PageSize, sortColumn = "MemberID", 
                                sortOrder = Model.GetToggleOrder("MemberID") })">
                                @if (Model.SortColumn == "MemberID")
                                {
                                    <i class="bi @(Model.SortOrder == "asc" ? "bi-sort-alpha-down" : "bi-sort-alpha-up")"></i>
                                }
                                ID
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { 
                                searchLastName = Model.SearchLastName, branch = Model.SelectedBranch,
                                pageSize = Model.PageSize, sortColumn = "FirstName", 
                                sortOrder = Model.GetToggleOrder("FirstName") })">
                                @if (Model.SortColumn == "FirstName")
                                {
                                    <i class="bi @(Model.SortOrder == "asc" ? "bi-sort-alpha-down" : "bi-sort-alpha-up")"></i>
                                }
                                First Name
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new {
                                searchLastName = Model.SearchLastName, branch = Model.SelectedBranch,
                                pageSize = Model.PageSize, sortColumn = "LastName",
                                sortOrder = Model.GetToggleOrder("LastName") })">
                                @if (Model.SortColumn == "LastName")
                                {
                                    <i class="bi @(Model.SortOrder == "asc" ? "bi-sort-alpha-down" : "bi-sort-alpha-up")"></i>
                                }
                                Last Name
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new {
                                searchLastName = Model.SearchLastName, branch = Model.SelectedBranch,
                                pageSize = Model.PageSize, sortColumn = "Branch",
                                sortOrder = Model.GetToggleOrder("Branch") })">
                                @if (Model.SortColumn == "Branch")
                                {
                                    <i class="bi @(Model.SortOrder == "asc" ? "bi-sort-alpha-down" : "bi-sort-alpha-up")"></i>
                                }
                                Branch
                            </a>
                        </th>
                        <th>Birth Date</th>
                        <th>Address</th>
                        <th>Contact No</th>
                        <th>Email Address</th>
                        <th>Manage</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Members.Any())
                    {
                        <tr>
                            <td colspan="9" class="text-center text-muted py-5">
                                <i class="bi bi-emoji-frown d-block mb-2" style="font-size: 2rem;"></i>
                                @Model.NoResultsMessage
                            </td>
                        </tr>
                    }
                    @foreach (var m in Model.Members)
                    {
                        <tr>
                            <td>@m.MemberID</td>
                            <td>@m.FirstName</td>
                            <td>@m.LastName</td>
                            <td>@m.Branch</td>
                            <td>@(m.BirthDate.HasValue ? m.BirthDate.Value.ToString("yyyy-MM-dd") : "")</td>
                            <td>@m.Address</td>
                            <td>@m.ContactNo</td>
                            <td>@m.EmailAddress</td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@m.MemberID"
                                       class="btn btn-sm btn-outline-primary" title="Edit Member">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Detail" asp-route-id="@m.MemberID"
                                       class="btn btn-sm btn-outline-success" title="Member Details">
                                        <i class="bi bi-info-circle"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-secondary btn-delete-hover"
                                            data-bs-toggle="modal" data-bs-target="#deleteModal"
                                            data-id="@m.MemberID" data-name="@($"{m.FirstName} {m.LastName}")"
                                            data-url="@Url.Action("Delete", "Members")"
                                            title="Delete Member">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @* PAGINATION & PAGE SIZE *@
        <div class="d-flex justify-content-between align-items-center mt-2">
            <div class="d-flex justify-content-between align-items-center mt-3">
                <form method="get" class="d-flex align-items-center gap-2">
                    <select name="pageSize" class="form-select form-select-sm" onchange="this.form.submit()" style="width: auto;">
                        <option value="10" selected="@(Model.PageSize == 10)">10 per page</option>
                        <option value="20" selected="@(Model.PageSize == 20)">20 per page</option>
                        <option value="-1" selected="@(Model.PageSize == -1)">Show All</option>
                    </select>
                    <input type="hidden" name="searchLastName" value="@Model.SearchLastName" />
                    <input type="hidden" name="branch" value="@Model.SelectedBranch" />
                </form>
            </div>

            <div class="text-center flex-grow-1 member-pagination-info">
                Total Members: <strong>@Model.Members.TotalItemCount</strong> |
                Page: <strong>@Model.Members.PageNumber</strong> of
                <strong>@Model.Members.PageCount</strong> |
                Showing <strong>@Model.Members.Count</strong> items
            </div>

            <div>
                @Html.PagedListPager(
                Model.Members,
                                page => Url.Action("Index", new { page, searchLastName = Model.SearchLastName, branch = Model.SelectedBranch, pageSize = Model.PageSize }),
                                new PagedListRenderOptions
                                {
                                    LiElementClasses = new[] { "page-item" },
                                    PageClasses = new[] { "page-link" },
                                    UlElementClasses = new[] { "pagination pagination-sm mb-0" },
                                    MaximumPageNumbersToDisplay = 3,
                                    DisplayLinkToFirstPage = PagedListDisplayMode.Never,
                                    DisplayLinkToLastPage = PagedListDisplayMode.Never,
                                    DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                                    DisplayLinkToNextPage = PagedListDisplayMode.Always,
                                    DisplayEllipsesWhenNotShowingAllPageNumbers = true
                                })
            </div>
        </div>

        @* DELETE MODAL *@
        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <form id="deleteForm" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" id="deleteMemberId" />
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteModalLabel">Deactivate Member</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <strong id="memberName"></strong> will be marked as inactive. Continue?
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-danger">Yes</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>