@using X.PagedList
@using X.PagedList.Mvc.Core
@using MemberManagement.Web.ViewModels
@model MemberIndexVM

@{
    ViewData["Title"] = "Members List";
}

@if (TempData["SuccessMessage"] != null)
{
    <div id="successAlert" class="alert alert-success text-center">
        <i class="fa-solid fa-circle-info"></i> @TempData["SuccessMessage"]
    </div>
}

@section Styles {
    <link rel="stylesheet" href="~/css/memberpg/memberindex.css" />
}
@section Scripts {
    <script src="~/js/memberpg/memberindex.js"></script>
}

<div class="card shadow-lg">
    <div class="card-body">

        @* MEMBERS LIST | SEARCH BAR | FILTER | REFRESH *@
        <div class="member-top-bar mb-3">
            <div class="d-flex justify-content-between align-items-center">

                <div class="d-flex align-items-center gap-2">
                    <a asp-action="Create" class="btn btn-primary btn-sm btn-create-member" title="Create Member">
                        <i class="bi bi-person-plus"></i>
                    </a>
                    <h2 class="mb-0">MEMBERS LIST</h2>
                </div>

                <form method="get" class="d-flex align-items-center gap-3">
                    <input type="hidden" name="pageSize" value="@Model.PageSize" />

                    @* Search *@
                    <div class="d-flex align-items-center gap-1">
                        <div class="search-input-container">
                            <input type="text" name="searchLastName" id="searchLastName" class="form-control form-control-sm" placeholder="Search by Last Name" value="@Model.SearchLastName" />
                        </div>
                        <button type="submit" class="btn btn-sm btn-primary" title="Search by Last Name">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>

                    @* Filter *@
                    <div class="d-flex align-items-center gap-1">
                        <div style="width:180px;">
                            <select name="branch" id="branchFilter" class="form-select form-select-sm">
                                <option value="">All Branches</option>
                                @foreach (var b in Model.Branches)
                                {
                                    <option value="@b" selected="@(Model.SelectedBranch == b)">@b</option>
                                }
                            </select>
                        </div>
                        <button type="submit" class="btn btn-sm btn-primary" title="Filter by Branch">
                            <i class="bi bi-funnel"></i>
                        </button>
                    </div>

                    <a href="@Url.Action("Index")" class="btn btn-sm btn-outline-secondary" title="Reset filters">
                        <i class="bi bi-arrow-clockwise"></i>
                    </a>
                </form>
            </div>
        </div>

        @* MEMBERS TABLE *@
        <div class="table-responsive scrollable-table">
            <table class="table table-bordered member-table">
                <thead class="table-primary">
                    <tr>
                        <th>
                            <a href="@Url.Action("Index", new { searchLastName = Model.SearchLastName, branch = Model.SelectedBranch, pageSize = Model.PageSize, sortColumn = "MemberID", sortOrder = Model.GetToggleOrder("MemberID") })">
                                @if (Model.SortColumn == "MemberID") { <i class="bi @(Model.SortOrder == "asc" ? "bi-sort-numeric-down" : "bi-sort-numeric-up")"></i> } ID
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { searchLastName = Model.SearchLastName, branch = Model.SelectedBranch, pageSize = Model.PageSize, sortColumn = "FirstName", sortOrder = Model.GetToggleOrder("FirstName") })">
                                @if (Model.SortColumn == "FirstName") { <i class="bi @(Model.SortOrder == "asc" ? "bi-sort-alpha-down" : "bi-sort-alpha-up")"></i> } First Name
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { searchLastName = Model.SearchLastName, branch = Model.SelectedBranch, pageSize = Model.PageSize, sortColumn = "LastName", sortOrder = Model.GetToggleOrder("LastName") })">
                                @if (Model.SortColumn == "LastName") { <i class="bi @(Model.SortOrder == "asc" ? "bi-sort-alpha-down" : "bi-sort-alpha-up")"></i> } Last Name
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { searchLastName = Model.SearchLastName, branch = Model.SelectedBranch, pageSize = Model.PageSize, sortColumn = "Branch", sortOrder = Model.GetToggleOrder("Branch") })">
                                @if (Model.SortColumn == "Branch") { <i class="bi @(Model.SortOrder == "asc" ? "bi-sort-alpha-down" : "bi-sort-alpha-up")"></i> } Branch
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { searchLastName = Model.SearchLastName, branch = Model.SelectedBranch, pageSize = Model.PageSize, sortColumn = "MembershipType", sortOrder = Model.GetToggleOrder("MembershipType") })">
                                @if (Model.SortColumn == "MembershipType") { <i class="bi @(Model.SortOrder == "asc" ? "bi-sort-alpha-down" : "bi-sort-alpha-up")"></i> } Membership Type
                            </a>
                        </th>
                        <th>Address</th>
                        <th>Birth Date</th>
                        <th>Contact No</th>
                        <th>Email Address</th>
                        <th class="text-center">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Members.Any())
                    {
                        <tr>
                            <td colspan="10" class="text-center text-muted py-5">
                                <i class="bi bi-emoji-frown d-block mb-2" style="font-size: 2rem;"></i>
                                @Model.NoResultsMessage
                            </td>
                        </tr>
                    }
                    @foreach (var m in Model.Members)
                    {
                        <tr class="clickable-row" data-details-url="@Url.Action("Detail", new { id = m.MemberID })">
                            <td class="edit-trigger-cell text-primary fw-bold"
                                data-edit-url="@Url.Action("Edit", new { id = m.MemberID })"
                                title="Click to Edit Member"
                                style="cursor:pointer; text-decoration: underline;">
                                @m.MemberID
                            </td>
                            <td>@m.FirstName</td>
                            <td>@m.LastName</td>
                            <td>@m.Branch</td>
                            <td>@m.MembershipType</td>
                            <td>@m.Address</td>
                            <td>@(m.BirthDate.HasValue? m.BirthDate.Value.ToString("yyyy-MM-dd") : "")</td>
                            <td class="copy-cell" onclick="copyToClipboard('@m.ContactNo', this); event.stopPropagation();" title="Click to copy">
                                <div class="d-flex align-items-center">
                                    <span class="me-auto">@m.ContactNo</span>
                                    <i class="bi bi-copy text-primary ms-2 copy-icon"></i>
                                </div>
                            </td>
                            <td class="copy-cell" onclick="copyToClipboard('@m.EmailAddress', this); event.stopPropagation();" title="Click to copy">
                                <div class="d-flex align-items-center">
                                    <span class="me-auto text-truncate" style="max-width: 140px;">@m.EmailAddress</span>
                                    <i class="bi bi-copy text-primary ms-2 copy-icon"></i>
                                </div>
                            </td>
                            <td class="text-center">
                                <button type="button" class="btn btn-status-active"
                                        onclick="event.stopPropagation();"
                                        data-bs-toggle="modal" data-bs-target="#deleteModal"
                                        data-id="@m.MemberID" data-name="@($"{m.FirstName} {m.LastName}")"
                                        title="Click to Deactivate">
                                    ACTIVE
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @* PAGINATION | PAGE SIZE | EXPORT *@
        <div class="d-flex justify-content-between align-items-center mt-2">

            <div class="d-flex align-items-center gap-2 mt-3">
                <form method="get" class="d-flex align-items-center gap-2">
                    <select name="pageSize" class="form-select form-select-sm" onchange="this.form.submit()" style="width: auto;">
                        <option value="10" selected="@(Model.PageSize == 10)">10 rows</option>
                        <option value="20" selected="@(Model.PageSize == 20)">20 rows</option>
                        <option value="50" selected="@(Model.PageSize == 50)">50 rows</option>
                        <option value="-1" selected="@(Model.PageSize == -1)">All rows</option>
                    </select>
                    <input type="hidden" name="searchLastName" value="@Model.SearchLastName" />
                    <input type="hidden" name="branch" value="@Model.SelectedBranch" />
                </form>

                <span class="text-muted mx-2">|</span>
                <a asp-action="ExportToExcel" asp-route-searchLastName="@Model.SearchLastName" asp-route-branch="@Model.SelectedBranch" class="btn btn-outline-success btn-sm btn-pg-size icon-btn" title="Export to Excel"> <i class="bi bi-file-earmark-excel"></i> </a>
                <a asp-action="ExportToPdf" asp-route-searchLastName="@Model.SearchLastName" asp-route-branch="@Model.SelectedBranch" class="btn btn-outline-danger btn-sm btn-pg-size icon-btn" title="Export to PDF"> <i class="bi bi-file-earmark-pdf"></i> </a>
                <span class="text-muted mx-2">|</span>
                <a asp-action="Inactive" class="btn btn-outline-secondary btn-sm" title="View Inactive List"> <i class="bi bi-person-x"></i> </a>
            </div>

            <div class="text-center flex-grow-1 member-pagination-info">
                Total Members: <strong>@Model.Members.TotalItemCount</strong> |
                Page: <strong>@Model.Members.PageNumber</strong> of
                <strong>@Model.Members.PageCount</strong> |
                Showing <strong>@Model.Members.Count</strong> items
            </div>

            <div>
                @Html.PagedListPager(
                Model.Members,
                                page => Url.Action("Index", new { page, searchLastName = Model.SearchLastName, branch = Model.SelectedBranch, pageSize = Model.PageSize }),
                                new PagedListRenderOptions
                                {
                                    LiElementClasses = new[] { "page-item" },
                                    PageClasses = new[] { "page-link" },
                                    UlElementClasses = new[] { "pagination pagination-sm mb-0" },
                                    MaximumPageNumbersToDisplay = 3,
                                    DisplayLinkToFirstPage = PagedListDisplayMode.Never,
                                    DisplayLinkToLastPage = PagedListDisplayMode.Never,
                                    DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                                    DisplayLinkToNextPage = PagedListDisplayMode.Always,
                                    DisplayEllipsesWhenNotShowingAllPageNumbers = true
                                })
            </div>
        </div>

        @* DEACTIVATE MODAL *@
        <div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-0 shadow">
                    <form id="deleteForm" method="post" asp-action="Deactivate">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" id="deleteMemberId" />

                        <div class="modal-header bg-primary text-white">
                            <h5 class="modal-title fs-6" id="deleteModalLabel">
                                <i class="bi bi-exclamation-circle me-2"></i>Deactivate Member
                            </h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                        </div>

                        <div class="modal-body p-4 text-center">
                            <p class="mb-0">
                                <strong id="memberName"></strong> will be marked as inactive. <br />
                                <span class="text-muted small">Continue with this action?</span>
                            </p>
                        </div>

                        <div class="modal-footer border-top-0 px-4 pb-4 d-flex justify-content-center gap-2">
                            <button type="button" class="btn btn-outline-secondary px-4" data-bs-dismiss="modal">
                                <i class="bi bi-x-lg"></i> Cancel
                            </button>
                            <button type="submit" class="btn btn-outline-danger px-4">
                                <i class="bi bi-check-lg"></i> Yes, Proceed
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>