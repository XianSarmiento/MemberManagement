@using X.PagedList
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<MemberManagement.Web.ViewModels.MemberVM>


@* What it is: A Razor code block. Purpose: Run server-side C# code inside a view. *@
@{
    ViewData["Title"] = "Members List";
    var searchLastName = ViewBag.SearchLastName as string;
    var branch = ViewBag.SelectedBranch as string;
    var pageSize = ViewBag.RawPageSize ?? 10;
    var sortColumn = ViewBag.SortColumn as string;
    var sortOrder = ViewBag.SortOrder as string;

    // Logic for "No Results" message
    string noResultsMessage;

    if (!Model.Any() && string.IsNullOrWhiteSpace(searchLastName) && string.IsNullOrWhiteSpace(branch))
    {
        // First-ever page load, no records yet
        noResultsMessage = "No records available at the moment.";
    }
    else if (!string.IsNullOrWhiteSpace(searchLastName) && string.IsNullOrWhiteSpace(branch))
    {
        noResultsMessage = $"No members found matching \"{searchLastName}\".";
    }
    else if (string.IsNullOrWhiteSpace(searchLastName) && !string.IsNullOrWhiteSpace(branch))
    {
        noResultsMessage = $"No branch filtered named \"{branch}\".";
    }
    else if (!string.IsNullOrWhiteSpace(searchLastName) && !string.IsNullOrWhiteSpace(branch))
    {
        noResultsMessage = $"No members found matching \"{searchLastName}\" in branch \"{branch}\".";
    }
    else
    {
        noResultsMessage = "No results for your current filters.";
    }

    // Helper function to toggle sort direction and keep the table headers clean
    Func<string, string> GetToggleOrder = (col) => (sortColumn == col && sortOrder == "asc") ? "desc" : "asc";
}

@* What it is: A Razor conditional statement. Purpose: Conditionally render HTML depending on server-side data. *@
@if (TempData["SuccessMessage"] != null)
{
    <div id="successAlert" class="alert alert-success text-center">
        <i class="fa-solid fa-circle-info"></i>
        @TempData["SuccessMessage"]
    </div>
}

@* What it is: Razor sections. Purpose: Define named content sections that can be rendered in a layout page (_Layout.cshtml). *@
@section Styles {
    <link rel="stylesheet" href="~/css/memberpg/memberindex.css" />
}
@section Scripts {
    <script src="~/js/memberpg/memberindex.js"></script>
}



<br />
<div class="card shadow-lg">
    <div class="card-body">

        @* MEMBERS LIST | SEARCH BAR | FILTER | REFRESH *@
        <div class="member-top-bar mb-3">
            <div class="d-flex justify-content-between align-items-center">

                <div class="d-flex align-items-center gap-2">
                    <a asp-action="Create" class="btn btn-primary btn-sm btn-create-member" title="Create Member">
                        <i class="bi bi-person-plus"></i>
                    </a>
                    <h2 class="mb-0">MEMBERS LIST</h2>
                </div>

                <form method="get" class="d-flex align-items-center gap-3">
                    <input type="hidden" name="pageSize" value="@pageSize" />

                    <div class="d-flex align-items-center gap-1">
                        <div style="width:160px;">
                            <input type="text"
                                   name="searchLastName"
                                   id="searchLastName"
                                   class="form-control form-control-sm"
                                   placeholder="Search Last Name"
                                   value="@searchLastName" />
                        </div>
                        <button type="submit" class="btn btn-sm btn-primary" title="Search by Last Name">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>

                    <div class="d-flex align-items-center gap-1">
                        <div style="width:160px;">
                            <input list="branchList"
                                   name="branch"
                                   id="branchFilter"
                                   class="form-control form-control-sm"
                                   placeholder="Filter by Branch"
                                   value="@branch" />
                            <datalist id="branchList">
                                @foreach (var b in (ViewBag.Branches as List<string> ?? new List<string>()))
                                {
                                    <option value="@b"></option>
                                }
                            </datalist>
                        </div>
                        <button type="submit" class="btn btn-sm btn-primary" title="Filter by Branch">
                            <i class="bi bi-funnel"></i>
                        </button>
                    </div>

                    <a href="@Url.Action("Index")"
                       class="btn btn-sm btn-outline-secondary"
                       title="Reset filters">
                        <i class="bi bi-arrow-clockwise"></i>
                    </a>
                </form>

            </div>
        </div>

        @* MEMBERS TABLE *@
        <div class="table-responsive scrollable-table">
            <table class="table table-bordered table-striped member-table">
                <thead class="table-primary">
                    <tr>
                        <th>
                            <a href="@Url.Action("Index", new { searchLastName, branch, pageSize, sortColumn = "MemberID", sortOrder = GetToggleOrder("MemberID") })">
                                @if (sortColumn == "MemberID")
                                { <i class="bi @(sortOrder == "asc" ? "bi-sort-alpha-down" : "bi-sort-alpha-up")"></i> } ID
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { searchLastName, branch, pageSize, sortColumn = "FirstName", sortOrder = GetToggleOrder("FirstName") })">
                                @if (sortColumn == "FirstName")
                                { <i class="bi @(sortOrder == "asc" ? "bi-sort-alpha-down" : "bi-sort-alpha-up")"></i> } First Name
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { searchLastName, branch, pageSize, sortColumn = "LastName", sortOrder = GetToggleOrder("LastName") })">
                                @if (sortColumn == "LastName")
                                {  <i class="bi @(sortOrder == "asc" ? "bi-sort-alpha-down" : "bi-sort-alpha-up")"></i> } Last Name
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { searchLastName, branch, pageSize, sortColumn = "Branch", sortOrder = GetToggleOrder("Branch") })">
                                @if (sortColumn == "Branch")
                                { <i class="bi @(sortOrder == "asc" ? "bi-sort-alpha-down" : "bi-sort-alpha-up")"></i> } Branch
                            </a>
                        </th>
                        <th>Birth Date</th>
                        <th>Address</th>
                        <th>Contact No</th>
                        <th>Email Address</th>
                        <th>Manage</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="9" class="text-center text-muted py-5">
                                <i class="bi bi-emoji-frown d-block mb-2" style="font-size: 2rem;"></i>
                                @noResultsMessage
                            </td>
                        </tr>
                    }
                    @foreach (var m in (Model ?? Enumerable.Empty<MemberManagement.Web.ViewModels.MemberVM>()))
                    {
                        <tr>
                            <td>@m.MemberID</td>
                            <td>@m.FirstName</td>
                            <td>@m.LastName</td>
                            <td>@m.Branch</td>
                            <td>@m.BirthDate.ToString("yyyy-MM-dd")</td>
                            <td>@m.Address</td>
                            <td>@m.ContactNo</td>
                            <td>@m.EmailAddress</td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@m.MemberID" class="btn btn-sm btn-outline-primary" title="Edit Member"> <i class="bi bi-pencil-square"></i> </a>
                                    <a asp-action="Detail" asp-route-id="@m.MemberID" class="btn btn-sm btn-outline-success" title="Member Details"> <i class="bi bi-info-circle"></i> </a>
                                    <button type="button" class="btn btn-sm btn-outline-secondary btn-delete-hover"
                                            data-bs-toggle="modal" data-bs-target="#deleteModal"
                                            data-id="@m.MemberID" data-name="@($"{m.FirstName} {m.LastName}")"
                                            data-url="@Url.Action("Delete", "Members")"
                                            title="Delete Member">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @* PAGINATION & PAGE SIZE *@
        <div class="d-flex justify-content-between align-items-center mt-2">
            <div class="d-flex justify-content-between align-items-center mt-3">
                <form method="get" class="d-flex align-items-center gap-2">
                    <select name="pageSize" class="form-select form-select-sm" onchange="this.form.submit()" style="width: auto;">
                        <option value="10" selected="@(pageSize == 10)">10 per page</option>
                        <option value="20" selected="@(pageSize == 20)">20 per page</option>
                        <option value="-1" selected="@(pageSize == -1)">Show All</option>
                    </select>
                    <input type="hidden" name="searchLastName" value="@searchLastName" />
                    <input type="hidden" name="branch" value="@branch" />
                </form>
            </div>

            <div class="text-center flex-grow-1 member-pagination-info">
                Total Members: <strong>@(Model?.TotalItemCount ?? 0)</strong> |
                Page: <strong>@(Model?.PageNumber ?? 1)</strong> of
                <strong>@(Model?.PageCount ?? 1)</strong> |
                Showing <strong>@(Model?.Count ?? 0)</strong> items
            </div>

            <div>
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchLastName, branch, pageSize
                }),
                    new PagedListRenderOptions
                        {
                        LiElementClasses = new[] { "page-item" },
                        PageClasses = new[] { "page-link" },
                        UlElementClasses = new[] { "pagination pagination-sm mb-0" },
                        MaximumPageNumbersToDisplay = 3,
                        DisplayLinkToFirstPage = PagedListDisplayMode.Never,
                        DisplayLinkToLastPage = PagedListDisplayMode.Never,
                        DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                        DisplayLinkToNextPage = PagedListDisplayMode.Always,
                        DisplayEllipsesWhenNotShowingAllPageNumbers = true
                    })
            </div>
        </div>

        @* DELETE MODAL *@
        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <form id="deleteForm" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" id="deleteMemberId" />
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteModalLabel">Deactivate Member</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <strong id="memberName"></strong> will be marked as inactive. Continue?
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-danger">Yes</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>


