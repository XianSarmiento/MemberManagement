@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<MemberManagement.Web.ViewModels.MemberVM>

<br />
<div class="card shadow-sm">

    <div class="card-body">

        <h2>Members List</h2>
        <br />

        <div class="d-flex justify-content-between align-items-center mb-2">
            <a asp-action="Create" class="btn btn-primary btn-sm px-3 py-1">
                <i class="bi bi-person-plus me-1"></i> Create
            </a>

            <form method="get" class="d-flex" style="max-width:260px;">
                <input type="text"
                       name="searchLastName"
                       class="form-control form-control-sm me-2"
                       placeholder="Search by Last Name"
                       value="@ViewBag.SearchLastName"
                       style="height:28px; width:182px" />
                <button class="btn btn-sm btn-primary py-1" type="submit">
                    <i class="bi bi-search"></i>
                </button>
            </form>
        </div>

        <table class="table table-bordered table-striped" style="width:100%; padding:4px; font-size:12px;">
            <thead>
                <tr>
                    <th>Actions</th>
                    <th>Member ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Birth Date</th>
                    <th>Address</th>
                    <th>Branch</th>
                    <th>Contact No</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="Edit" asp-route-id="@m.MemberID"
                               class="btn btn-sm btn-outline-primary"
                               title="Edit Member">
                                <i class="bi bi-pencil-square"></i>
                            </a>

                            <button type="button"
                                    class="btn btn-sm btn-outline-secondary btn-delete-hover"
                                    data-bs-toggle="modal"
                                    data-bs-target="#deleteModal"
                                    data-id="@m.MemberID"
                                    data-name="@m.FirstName @m.LastName"
                                    title="Delete Member">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                        <td>@m.MemberID</td>
                        <td>@m.FirstName</td>
                        <td>@m.LastName</td>
                        <td>@m.BirthDate.ToString("yyyy-MM-dd")</td>
                        <td>@m.Address</td>
                        <td>@m.Branch</td>
                        <td>@m.ContactNo</td>
                        <td>@m.EmailAddress</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-between align-items-center mt-2">

            <div class="d-flex align-items-center">
                <form method="get">
                    <select name="pageSize" class="form-select form-select-sm" style="height:28px; width:80px;" onchange="this.form.submit()">
                        <option value="5" selected="@(ViewBag.CurrentPageSize == 5 ? "selected" : null)">5</option>
                        <option value="10" selected="@(ViewBag.CurrentPageSize == 10 ? "selected" : null)">10</option>
                        <option value="-1" selected="@(ViewBag.CurrentPageSize == -1 ? "selected" : null)">All</option>
                    </select>
                    <input type="hidden" name="searchLastName" value="@ViewBag.SearchLastName" />
                </form>
            </div>

            <div class="text-center flex-grow-1" style="font-size:13px">
                Total of Members: <strong>@ViewBag.Pagination.total</strong> |
                Page: <strong>@ViewBag.Pagination.page</strong> of
                <strong>@(Math.Ceiling((double)ViewBag.Pagination.total / ViewBag.Pagination.pageSize))</strong> |
                Showing <strong>@ViewBag.Pagination.items.Count</strong> items
            </div>

            <div>
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchLastName = ViewBag.SearchLastName, pageSize = ViewBag.CurrentPageSize }),
                new PagedListRenderOptions
                {
                    LiElementClasses = new[] { "page-item" },
                    PageClasses = new[] { "page-link" },
                    UlElementClasses = new[] { "pagination pagination-sm mb-0" }
                })
            </div>
        </div>

        <!-- Delete Confirmation Modal -->
        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <form id="deleteForm" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" id="deleteMemberId" />
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteModalLabel">Deactivate Member</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <strong id="memberName"></strong> will be marked as inactive. Continue?
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-danger">Yes</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>


@section Scripts {
    <script>
        var deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var memberId = button.getAttribute('data-id');
            var memberName = button.getAttribute('data-name');

            // Set member name in modal
            deleteModal.querySelector('#memberName').textContent = memberName;

            // Set hidden input value
            deleteModal.querySelector('#deleteMemberId').value = memberId;

            // Optional: form action can stay as just /Members/Delete
            deleteModal.querySelector('#deleteForm').action = '/Members/Delete';
        });
    </script>
}
