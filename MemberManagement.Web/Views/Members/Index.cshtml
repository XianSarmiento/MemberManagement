@using X.PagedList
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<MemberManagement.Web.ViewModels.MemberVM>


@if (TempData["SuccessMessage"] != null)
{
    <div id="successAlert" class="alert alert-success text-center">
        <i class="fa-solid fa-circle-info"></i>
        @TempData["SuccessMessage"]
    </div>
}

<link rel="stylesheet" href="~/css/memberpg/memberindex.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<br />
<div class="card shadow-lg">
    <div class="card-body">

        <div class="member-top-bar">
            <div class="d-flex justify-content-between align-items-center">

                <div class="d-flex align-items-center gap-2">
                    <a asp-action="Create" class="btn btn-primary btn-sm btn-create-member" title="Create Member">
                        <i class="bi bi-person-plus"></i>
                    </a>

                    <h2 class="mb-0">MEMBERS LIST</h2>
                </div>

                <form method="get" class="d-flex gap-2">
                    <div class="position-relative" style="width:200px;">
                        <input type="text" name="searchLastName" id="searchLastName"
                               class="form-control form-control-sm member-search-input"
                               placeholder="Search Lastname" value="@(ViewBag.SearchLastName ?? "")" />
                    </div>

                    <div class="position-relative" style="width:200px;">
                        <input list="branchList" name="branch" id="branchFilter"
                               class="form-control form-control-sm member-search-input"
                               placeholder="Filter by Branch" value="@(ViewBag.Branch ?? "")" />

                        <datalist id="branchList">
                            @foreach (var b in (ViewBag.Branches as List<string> ?? new List<string>()))
                            {
                                <option value="@b"></option>
                            }
                        </datalist>
                    </div>

                    <button class="btn btn-sm btn-primary py-1" type="submit">
                        <i class="bi bi-search"></i>
                    </button>
                </form>
            </div>
        </div>

        <br />

        @* MEMBERS TABLE *@
        <table class="table table-bordered table-striped member-table">
            <thead class="table-primary">
                <tr>
                    <th>Member ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Birth Date</th>
                    <th>Address</th>
                    <th>Branch</th>
                    <th>Contact No</th>
                    <th>Email Address</th>
                    <th>Manage</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="9" class="text-center text-muted py-5">
                            <i class="bi bi-emoji-frown d-block mb-2" style="font-size: 2rem;"></i>

                            @{
                                string msg = "We couldn’t find any members.";
                                var lastNameFilter = ViewData["SearchLastName"] as string;
                                var branchFilter = ViewData["SelectedBranch"] as string;

                                if (!string.IsNullOrWhiteSpace(lastNameFilter))
                                {
                                    msg = $"We couldn’t find any members matching '{lastNameFilter}'.";
                                }
                                else if (!string.IsNullOrWhiteSpace(branchFilter))
                                {
                                    msg = $"We couldn’t find any members in branch '{branchFilter}'.";
                                }
                            }

                            @msg
                        </td>
                    </tr>
                }

                @foreach (var m in (Model ?? Enumerable.Empty<MemberManagement.Web.ViewModels.MemberVM>()))
                {
                    <tr>
                        <td>@m.MemberID</td>
                        <td>@m.FirstName</td>
                        <td>@m.LastName</td>
                        <td>@m.BirthDate.ToString("yyyy-MM-dd")</td>
                        <td>@m.Address</td>
                        <td>@m.Branch</td>
                        <td>@m.ContactNo</td>
                        <td>@m.EmailAddress</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@m.MemberID"
                               class="btn btn-sm btn-outline-primary"
                               title="Edit Member">
                                <i class="bi bi-pencil-square"></i>
                            </a>

                            <a asp-action="Detail" asp-route-id="@m.MemberID"
                               class="btn btn-sm btn-outline-success"
                               title="Member Details">
                                <i class="bi bi-info-circle"></i>
                            </a>

                            <button type="button"
                                    class="btn btn-sm btn-outline-secondary btn-delete-hover"
                                    data-bs-toggle="modal"
                                    data-bs-target="#deleteModal"
                                    data-id="@m.MemberID"
                                    data-name="@($"{m.FirstName} {m.LastName}")"
                                    title="Delete Member">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @* PAGINATION & PAGE SIZE *@
        @{
            var currentPageSize = ViewBag.CurrentPageSize ?? 5;
        }
        <div class="d-flex justify-content-between align-items-center mt-2">

            <div class="d-flex align-items-center">
                <form method="get">
                    @{
                        var rawPageSize = ViewBag.RawPageSize ?? 5;
                    }

                    <select name="pageSize" class="form-select form-select-sm" style="height:28px; width:80px;" onchange="this.form.submit()">
                        <option value="5" selected="@(rawPageSize == 5 ? "selected" : null)">5</option>
                        <option value="10" selected="@(rawPageSize == 10 ? "selected" : null)">10</option>
                        <option value="-1" selected="@(rawPageSize == -1 ? "selected" : null)">All</option>
                    </select>

                    <input type="hidden" name="searchLastName" value="@(ViewBag.SearchLastName ?? "")" />
                    <input type="hidden" name="branch" value="@(ViewBag.Branch ?? "")" />
                </form>
            </div>

            <div class="text-center flex-grow-1 member-pagination-info">
                Total Members: <strong>@(Model?.TotalItemCount ?? 0)</strong> |
                Page: <strong>@(Model?.PageNumber ?? 1)</strong> of
                <strong>@(Model?.PageCount ?? 1)</strong> |
                Showing <strong>@(Model?.Count ?? 0)</strong> items
            </div>

            <div>
                @Html.PagedListPager(Model, page => Url.Action("Index", new {
                page,
                searchLastName = ViewBag.SearchLastName ?? "",
                branch = ViewBag.Branch ?? "",
                pageSize = currentPageSize
                                }),
                                new PagedListRenderOptions
                                {
                                    LiElementClasses = new[] { "page-item" },
                                    PageClasses = new[] { "page-link" },
                                    UlElementClasses = new[] { "pagination pagination-sm mb-0" }
                                })
            </div>
        </div>

        @* DELETE MODAL *@
        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <form id="deleteForm" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" id="deleteMemberId" />
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteModalLabel">Deactivate Member</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <strong id="memberName"></strong> will be marked as inactive. Continue?
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-danger">Yes</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script>
        var deleteModal = document.getElementById('deleteModal');
        if(deleteModal) {
            deleteModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                if(!button) return;

                var memberId = button.getAttribute('data-id') ?? '';
                var memberName = button.getAttribute('data-name') ?? '';

                deleteModal.querySelector('#memberName').textContent = memberName;
                deleteModal.querySelector('#deleteMemberId').value = memberId;
                deleteModal.querySelector('#deleteForm').action = '/Members/Delete';
            });
        }

        window.addEventListener('DOMContentLoaded', (event) => {
            const alert = document.getElementById('successAlert');
            if(alert) {
                setTimeout(() => {
                    alert.style.animation = 'fadeOut 0.5s forwards';
                    setTimeout(() => alert.remove(), 500);
                }, 3000);
            }
        });
    </script>
}
